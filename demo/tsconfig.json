{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es5",
      "skipLibCheck": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "noEmitHelpers": true,
      "noEmitOnError": false,
      "lib": ["es6", "dom"],
      "baseUrl": ".",
      "paths": {
        "~/*": ["app/*"]
      }
    },
    "exclude": ["node_modules", "platforms", "../src/node_modules"]
  }